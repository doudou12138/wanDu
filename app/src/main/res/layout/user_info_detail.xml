<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="445sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_info_head_image_title"
        android:text="头像"
        android:paddingTop="8sp"
        android:textSize="24sp">

    </TextView>
    <ImageView
        android:id="@+id/detail_info_head_image"
        android:layout_width="64sp"
        android:layout_height="64sp"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_info_username_title"
        android:text="名字"
        android:textSize="24sp"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        app:layout_constraintTop_toBottomOf="@+id/detail_info_head_image">

    </TextView>

    <TextView
        android:id="@+id/detail_info_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="昵称"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        app:layout_constraintTop_toBottomOf="@id/detail_info_head_image"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_info_acc_num_title"
        android:text="账号"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/detail_info_username"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp">

    </TextView>

    <TextView
        android:id="@+id/detail_info_acc_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="账号信息"
        app:layout_constraintTop_toBottomOf="@id/detail_info_username"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:id="@+id/detail_info_age_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年龄"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/detail_info_acc_num"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp">

    </TextView>

    <TextView
        android:id="@+id/detail_info_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="0岁"
        app:layout_constraintTop_toBottomOf="@id/detail_info_acc_num"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:id="@+id/detail_info_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="邮箱"
        app:layout_constraintTop_toBottomOf="@id/detail_info_age"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp">

    </TextView>
    <TextView
        android:id="@+id/detail_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="邮箱号码"
        app:layout_constraintTop_toBottomOf="@id/detail_info_age"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:id="@+id/detail_info_self_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="个人简介"
        app:layout_constraintTop_toBottomOf="@id/detail_info_email"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp">

    </TextView>

    <TextView
        android:id="@+id/detail_info_self_introduction"
        android:layout_width="match_parent"
        android:layout_height="128sp"
        android:textSize="24sp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="你好，这是我的自我简介。"
        app:layout_constraintTop_toBottomOf="@id/detail_info_self_intro_title"
        android:layout_marginTop="8sp"
        android:paddingTop="4sp"
        android:background="@drawable/input_bored"
        >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

