<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WebviewDemoActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:id="@+id/webViewControler">

        <Button
            android:id="@+id/webBack"
            android:layout_width="36sp"
            android:layout_height="match_parent"
            android:text="《"
            android:textSize="20sp"
            android:background="@color/white"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

        </Button>

        <Button
            android:id="@+id/webEnter"
            android:layout_width="36sp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/webBack"
            android:background="@color/white"
            android:text="》"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            >

        </Button>

        <Button
            android:id="@+id/shutDown"
            android:layout_width="36sp"
            android:layout_height="match_parent"
            android:text="×"
            android:background="@color/white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36sp"
        app:layout_constraintTop_toBottomOf="@+id/webViewControler"
        >

    </WebView>
</androidx.constraintlayout.widget.ConstraintLayout>