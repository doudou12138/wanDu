<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="110sp"
        android:layout_height="75sp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:src="@drawable/icons_sun_deep_yellow24"
            >

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10sp"
                android:text="晴"
                android:padding="5sp"
                android:autoSizeTextType="uniform">

            </TextView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="18°"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="216dp"
        android:layout_height="119dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"

        android:src="@drawable/logo_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather" />

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="40sp"
        app:layout_constraintTop_toBottomOf="@id/logoImage">

        <EditText
            android:id="@+id/editText"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:hint="搜索内容"
            android:layout_weight="8"
            >

        </EditText>
        <TextView
            android:id="@+id/searchNow"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="万度一下"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:background="#0000ff"
            android:layout_weight="3">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/news_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="40sp"
        >

        <LinearLayout
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/news_list"
            android:paddingBottom="20sp">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="36sp"
                android:text="玩原神以来最上头的一次抽卡"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:paddingRight="50sp"></TextView>
            <TextView
                android:id="@+id/auther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  阿右"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/list1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36sp"
                android:text="第一次玩原神，被这个游戏震惊到了"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
            >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="92sp"
                    android:layout_weight="1"
                    android:src="@drawable/role">

                </ImageView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height = "92sp"
                    android:layout_weight="1"
                    android:src="@drawable/yuan">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>