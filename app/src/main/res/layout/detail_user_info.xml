<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/from_userinfo_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="《"
        android:padding="8sp"
        android:textSize="32sp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8sp"
        android:text="个人信息"
        android:textSize="32sp">

    </TextView>

    <include
        android:id="@+id/info_detail"
        android:layout_width="match_parent"
        android:layout_height="512sp"
        layout="@layout/user_info_detail"
        app:layout_constraintTop_toBottomOf="@id/from_userinfo_to_home">
    </include>

    <Button
        android:id="@+id/userinfo_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/info_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#21b1fe"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>