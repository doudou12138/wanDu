<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon_wandu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_wandu_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WanDu"
        tools:targetApi="31">
        <activity
            android:name=".activities.WebviewDemoActivity"
            android:exported="true"
            android:label="BaiduWeb"
            android:theme="@style/Theme.Video">

        </activity>
        <activity
            android:name=".activities.WeatherActivity"
            android:exported="true"
            android:label="@string/title_activity_weather"
            android:theme="@style/Theme.WanDu" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WanDu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VideoPlayActivity"
            android:exported="true"
            android:label="VideoPlayer"
            android:theme="@style/Theme.Video" />
    </application>

</manifest>